// KOauth Database Schema
// Supports SQLite (development) and PostgreSQL (production)
// Switch by changing DATABASE_URL in .env

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Change to "postgresql" for production
  url      = env("DATABASE_URL")
}

// User model with email/password authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  emailVerified Boolean   @default(false) @map("email_verified")

  // OAuth fields (Task 1.4)
  provider      String?   // "google" | "github" | null (null = email/password)
  providerId    String?   @map("provider_id") // Unique ID from OAuth provider

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  sessions      Session[]
  apiKeys       UserApiKey[]

  @@unique([provider, providerId]) // Ensure unique provider+providerId combination
  @@map("users")
}

// Session model for secure cookie-based authentication with refresh token rotation
model Session {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  refreshToken  String   @unique @map("refresh_token") // Hashed with scrypt
  expiresAt     DateTime @map("expires_at")
  ipAddress     String?  @map("ip_address")
  userAgent     String?  @map("user_agent")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  // Relations
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

// Personal API keys for long-lived authentication (Task 1.3)
// Used for programmatic access (iOS shortcuts, legacy systems like Kura)
model UserApiKey {
  id          String    @id @default(cuid())
  userId      String    @map("user_id")
  name        String    // Friendly name (e.g., "Kura Production", "iOS Shortcuts")
  prefix      String    @unique // 4-6 char prefix for display (e.g., "koa_abc123")
  keyHash     String    @map("key_hash") // scrypt hash of the full key
  expiresAt   DateTime? @map("expires_at") // Optional expiration
  lastUsedAt  DateTime? @map("last_used_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([prefix])
  @@map("user_api_keys")
}

// Note: OAuth integration completed in Task 1.4 (provider + providerId fields added to User model)
