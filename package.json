{
  "name": "koauth",
  "version": "0.1.0",
  "description": "Reusable self-hosted auth server for Fastify/Node.js apps",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "oauth:register-client": "tsx scripts/register-oauth-client.ts",
    "oauth:update-client": "tsx scripts/update-oauth-client.ts",
    "oauth:delete-client": "tsx scripts/delete-oauth-client.ts",
    "oauth:diagnose": "tsx scripts/diagnose-oauth-flow.ts",
    "admin:setup": "tsx scripts/setup-initial-admin.ts",
    "docker:build": "docker build -t koauth .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "auth",
    "authentication",
    "fastify",
    "oauth",
    "jwt",
    "session"
  ],
  "author": "Till Matthis",
  "license": "MIT",
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/oauth2": "^8.1.2",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.1",
    "@prisma/client": "^5.22.0",
    "argon2": "^0.40.3",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "tslib": "^2.8.1",
    "winston": "^3.14.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/ui": "^2.1.4",
    "better-sqlite3": "^12.4.5",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
